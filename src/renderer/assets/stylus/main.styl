@import '../../../../node_modules/vuetify/src/stylus/main'


.video-call
  width 100%
  height auto
  position relative
  padding 0!important
  margin 50px auto
  background-color rgba(0, 0, 0, .3)
  overflow hidden

  .contact-name
    position absolute
    top 0
    margin-left 15px
    color whitesmoke
    text-shadow 0 1px rgba(0,0,0,.7)

  .remote-stream
    width 100%
    height 100%
    background rgba(3,33,52,.7)
    z-index -1

    video
      width 100%
      height 100%

  .local-stream
    width 100px
    height 100px
    position absolute
    z-index 1000
    background rgba(255,255,255, 1)
    border solid 1px rgba(0,0,0,.3)
    bottom 0
    left 40%

    video
      width 100%
      height 100%

  .controls
    position absolute
    bottom 0
    right 0
    margin-right 20px
    margin-bottom 10px
